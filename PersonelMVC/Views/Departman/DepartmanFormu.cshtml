@model PersonelMVC.Models.EntityFramework.Departman
@{
    ViewBag.Title = "Departman Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Departman Form Sayfası</h2>
<br />
<br />

<div id="mesaj"></div>
@using (Ajax.BeginForm("Save", "Departman",new AjaxOptions {HttpMethod="POST",UpdateTargetId="mesaj" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.HiddenFor(m=>m.Id)
        <label class="alert-info">Departman Adı:</label>
        @Html.TextBoxFor(m => m.Ad, new { @class = "text-dark  form-control" })
        <br />
        <button type="submit" class="btn btn-secondary">Kaydet</button>
    </div>
}

